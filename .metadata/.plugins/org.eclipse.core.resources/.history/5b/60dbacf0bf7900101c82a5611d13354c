package com.shiva.repositories;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.bank.models.TransactionInfo;

public interface TransactionRepository extends JpaRepository<TransactionInfo, Integer> {

	@Query("from TransactionInfo where fromaccount =:args")
	List<TransactionInfo> getTransactionList(@Param("args") int accountno);

}
